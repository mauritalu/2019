@model MultiHttpClient.ViewModel.MultiHttpClientViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CatData</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @for (int i = 0; i < Model.Response.CatData.Count; i++)
        {
            <div class="form-group">
               
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Response.CatData[i].BankName, new { @class = "control-label col-md-2" })
                    @Html.EditorFor(m => m.Response.CatData[i].kundnr, new { @class = "control-label col-md-2" })
                    @Html.EditorFor(m => m.Response.CatData[i].ExpectedAmount, new { @class = "control-label col-md-2" })

                    @Html.DropDownListFor(m => m.Response.CatData[i].Persnr, new SelectList(Model.ResponseLiik.LiikData, "LiikId", "LiikName", Model.Response.CatData[i].Persnr), new { @class = "form-control" })


                </div>
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
